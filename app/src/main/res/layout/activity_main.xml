<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_operation"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="@string/operation"
            android:textSize="32sp"
            />

        <TextView
            android:id="@+id/txt_result"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="@string/result"
            android:textSize="64sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:weightSum="4"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/bt_AC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_AC"
                android:textSize="32sp"
                android:onClick="onClickButtonAC"
                android:backgroundTint="@color/gray_button"
                />

            <Button
                android:id="@+id/bt_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_delete"
                android:textSize="32sp"
                android:onClick="onClickButtonDelete"
                android:backgroundTint="@color/gray_button"
                />

            <Button
                android:id="@+id/bt_modulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_modulo"
                android:textSize="32sp"
                android:onClick="onClickButtonModulo"
                android:backgroundTint="@color/gray_button"
                />

            <Button
                android:id="@+id/bt_divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_divide"
                android:textSize="32sp"
                android:onClick="onClickButtonDivide"
                android:backgroundTint="@color/gray_button"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:weightSum="4"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/bt_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_7"
                android:textSize="32sp"
                android:onClick="onClickButton7"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_8"
                android:textSize="32sp"
                android:onClick="onClickButton8"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_9"
                android:textSize="32sp"
                android:onClick="onClickButton9"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_multiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_multiply"
                android:textSize="32sp"
                android:onClick="onClickButtonMultiply"
                android:backgroundTint="@color/gray_button"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:weightSum="4"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/bt_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_4"
                android:textSize="32sp"
                android:onClick="onClickButton4"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_5"
                android:textSize="32sp"
                android:onClick="onClickButton5"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_6"
                android:textSize="32sp"
                android:onClick="onClickButton6"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_minus"
                android:textSize="32sp"
                android:onClick="onClickButtonMinus"
                android:backgroundTint="@color/gray_button"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:weightSum="4"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/bt_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_1"
                android:textSize="32sp"
                android:onClick="onClickButton1"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_2"
                android:textSize="32sp"
                android:onClick="onClickButton2"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_3"
                android:textSize="32sp"
                android:onClick="onClickButton3"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_plus"
                android:textSize="32sp"
                android:onClick="onClickButtonPlus"
                android:backgroundTint="@color/gray_button"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:weightSum="4"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/bt_change_sign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_change_sign"
                android:textSize="32sp"
                android:onClick="onClickButtonChangeSign"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_0"
                android:textSize="32sp"
                android:onClick="onClickButton0"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_dot"
                android:textSize="32sp"
                android:onClick="onClickButtonDot"
                android:backgroundTint="@color/number_button"
                />

            <Button
                android:id="@+id/bt_equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/bt_equal"
                android:textSize="32sp"
                android:onClick="onClickButtonCalculate"
                android:backgroundTint="@color/equal_button"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>